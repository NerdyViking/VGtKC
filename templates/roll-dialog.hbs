<form class="vikarov-roll-dialog {{cssClass}}" autocomplete="off">
  <!-- Header with D&D 5e styling -->
  <header class="sheet-header flexrow">
    <div class="header-content">
      <h1 class="title">Alchemist's Supplies Check</h1>
      <h2 class="subtitle">DC {{dc}}</h2>
    </div>
  </header>

  <!-- Main content area -->
  <div class="sheet-content">
    <div class="form-group">
      <label>Ability:</label>
      <select id="ability-select">
        {{#each abilities as |ability key|}}
          <option value="{{key}}" {{#if (eq key ../defaultAbility)}}selected{{/if}}>{{ability.label}} (Mod: {{ability.mod}})</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label>Proficiency Bonus:</label>
      <span>{{profBonus}}</span>
    </div>
    <div class="form-group">
      <label>Situational Bonus:</label>
      <input type="text" id="bonus" value="0" />
    </div>
    <div class="form-group">
      <label>Roll Mode:</label>
      <select id="roll-mode">
        {{#each rollModes as |mode|}}
          <option value="{{mode.value}}" {{#if (eq mode.value ../defaultRollMode)}}selected{{/if}}>{{mode.label}}</option>
        {{/each}}
      </select>
    </div>
    <div class="advantage-buttons">
      <button type="button" class="roll-mode advantage" data-mode="advantage">Advantage</button>
      <button type="button" class="roll-mode normal selected" data-mode="normal">Normal</button>
      <button type="button" class="roll-mode disadvantage" data-mode="disadvantage">Disadvantage</button>
    </div>
  </div>
</form>