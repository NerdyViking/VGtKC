<form class="reagent-selection">
    <header class="sheet-header">
        <h1 class="charname">Select a Reagent</h1>
    </header>
    <section class="sheet-body">
        <div class="search-bar">
            <input type="text" class="reagent-search" placeholder="Search reagents..." />
            <select class="sort-select">
                <option value="name">Sort by Name</option>
                <option value="quantity">Sort by Quantity</option>
            </select>
        </div>
        <div class="reagent-list">
            {{#if hasReagents}}
                {{#each reagents as |reagent|}}
                    <div class="reagent-entry" data-item-id="{{reagent.id}}" data-item-name="{{reagent.name}}">
                        <img class="item-icon" src="{{reagent.img}}" alt="{{reagent.name}}" width="36" height="36"/>
                        <div class="reagent-content">
                            <span class="reagent-name">{{reagent.name}}</span>
                            <span class="reagent-details">Qty: {{reagent.quantity}} (C:{{reagent.ipValues.combat}}, U:{{reagent.ipValues.utility}}, E:{{reagent.ipValues.entropy}}, E:{{reagent.essence}})</span>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p class="no-reagents">No reagents available.</p>
            {{/if}}
        </div>
    </section>
</form>