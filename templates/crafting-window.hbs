<form class="{{cssClass}}" autocomplete="off">
  <!-- Header with D&D 5e styling -->
  <header class="sheet-header flexrow">
    <h1 class="title">{{title}}</h1>
  </header>

  <!-- Main content area -->
  <div class="sheet-content">
    <!-- Add a section header for "Reagents" to match the screenshot -->
    <div class="sheet-tabs tabs" data-group="primary">
      <b class="item active" data-tab="reagents">REAGENTS</b>
      <!-- Add more tabs here in the future if needed (e.g., for Components) -->
    </div>
    <hr class="tab-divider" />

    <!-- Crafting container with triangular layout -->
    <div class="sheet-body">
      <div class="tab reagents active" data-group="primary" data-tab="reagents">
        <div class="crafting-container">
          <!-- Triangular layout for reagent slots -->
          <div class="reagent-slot top-slot" data-slot="1"></div>
          <div class="reagent-slot bottom-left-slot" data-slot="2"></div>
          <div class="reagent-slot bottom-right-slot" data-slot="3"></div>

          <!-- Craft button -->
          <button class="craft-button">Craft!</button>

          <!-- IP display -->
          <div class="ip-display">
            <p>Combat: <span class="combat-ip">{{combatIP}}</span></p>
            <p>Utility: <span class="utility-ip">{{utilityIP}}</span></p>
            <p>Entropy: <span class="entropy-ip">{{entropyIP}}</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>